{
    "rules": {
        "no-var-keyword": true,
        "triple-equals": true,
        "typedef-whitespace": true,
        "typedef": [true,
            "call-signature",
            "parameter",
            "member-variable-declaration"
        ],
        "member-ordering": [true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor"
                ],
                "alphabetize": false
            }
        ],
        "curly": true,
        "no-conditional-assignment": true,
        "no-for-in-array": true,
        "array-type": [true, "array"],
        "no-angle-bracket-type-assertion": true,
        "no-boolean-literal-compare": true,
        "space-before-function-paren": [true, "never"],
        "arrow-parens": true,
        "new-parens": true,
        "semicolon": [true, "always"],
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock",
            "check-postbrace"
        ]
    },

    "jsRules": {}
}